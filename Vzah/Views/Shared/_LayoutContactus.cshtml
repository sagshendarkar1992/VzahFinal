<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/css//bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <script src="~/Content/css/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}
    <!-- Add jQuery Style direct - used for jQGrid plugin -->
    <link href="@Url.Content("~/Scripts/plugins/jquery-ui/jquery-ui.min.css")" rel="stylesheet" type="text/css" />

    <!-- Primary Inspinia style -->
    @Styles.Render("~/font-awesome/css")
     
    @Styles.Render("~/plugins/select2Styles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/clockpickerStyles")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/select2")
    <script src="~/Scripts/sweetalert2@10.js"></script>
    <script src="~/Scripts/jquery.twbsPagination.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="conatiner-fluid p-0">
        <header>
            <div id="header-top">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <img src="~/Content/assets/images/vzahLogo.png" class="logo">
                        </div>
                        <div class="col-sm-6">
                            <ul class="log-reg">
                                <li>
                                    @using Microsoft.AspNet.Identity
                                    @if (Request.IsAuthenticated)
                                    {
                                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                        {
                            @Html.AntiForgeryToken()
                                                <ul class="nav navbar-nav navbar-right">
                                                    <li>

                                                    </li>
                                                    <li><button class="logreg-cta" href="javascript:document.getElementById('logoutForm').submit()">Log Out</button></li>
                                                </ul> }
                                        }
                                        else
                                        {
                            <button type="button" class="logreg-cta" id="logreg-cta">Login / Register</button>}
                                </li>
                                <li>
                                    <a href="tel:+18002001234" class="tollfree-num"><i class="fas fa-phone-alt"></i> +1800-200-1234</a><br />
                                    @Html.ActionLink("Hi,"+User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div id="header-bottom">
                <div class="container">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            @Html.Partial("_Navigation")

                        </div>
                    </nav>
                </div>
            </div>
        </header>
        @RenderBody()
         
    </div>
</body>
</html>